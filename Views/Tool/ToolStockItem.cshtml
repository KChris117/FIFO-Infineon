@model IEnumerable<FIFO_Infineon.Models.StockItem>
@{ 
ViewData["Title"] = "Stok Barang - Tool"; }
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Tambah Barang
    </a>
</div>

<p class="text-muted">
    Berikut adalah daftar stok barang kategori Chemical. Stok diurutkan berdasarkan tanggal masuk.
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nama Barang</th>
            <th>Item</th>
            <th>Jumlah</th>
            <th>Tanggal Masuk</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MasterItem?.NamaItem</td>
                <td>@item.MasterItemID</td>
                <td>@item.Jumlah</td>
                <td>@item.TanggalMasuk.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>