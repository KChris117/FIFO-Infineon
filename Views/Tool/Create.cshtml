@model FIFO_Infineon.Models.StockItem
@{
    ViewData["Title"] = "Add Tool Stock";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-2">
                <label asp-for="MasterItemID">Item ID</label>
                <select asp-for="MasterItemID" class="form-control" asp-items="ViewBag.MasterItemID">
                    <option value="">-- Choose Item ID --</option>
                </select>
            </div>
            
            <div class="form-group mb-2">
                <label>Item ID</label>
                <input id="ItemName" class="form-control" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
            </div>
            
            <div class="form-group mb-2">
                <label>Item Description</label>
                <textarea id="ItemDescription" class="form-control" readonly style="background-color: #e9ecef; cursor: not-allowed;"></textarea>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" placeholder="0" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-custom-primary" />
                <a asp-action="ToolStockItem" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
    $(document).ready(function () {
        $("#MasterItemID").on('change', function () {
            var itemId = $(this).val();
            if (itemId) {
                $.ajax({
                    url: '@Url.Action("GetItemDetails", "Stock")',
                    type: 'GET', data: { id: itemId },
                    success: function (data) {
                        $("#itemName").val(data.itemName);
                        $("#itemDescription").val(data.itemDescription);
                    },
                    error: function () {
                        $("#itemName").val('Item tidak ditemukan'); 
                        $("#itemDescription").val('Silakan pilih ulang');
                    }
                });
            } else {
                $("#itemName").val('');
                $("#itemDescription").val('');
            }
        });
    });
    </script>
}