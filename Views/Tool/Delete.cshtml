@model FIFO_Infineon.Models.StockItem
@{
    ViewData["Title"] = "Delete Stock";
}

<h1>@ViewData["Title"]</h1>
<h3>Are you sure want to delete this item?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Item ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MasterItemID)
        </dd>
        <dt class="col-sm-2">
            Item Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MasterItem !.ItemName)
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            Entry Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EntryDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ToolStockItem">Back to list</a>
    </form>
</div>