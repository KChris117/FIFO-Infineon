@model FIFO_Infineon.Models.StockItem
@{
    ViewData["Title"] = "Tambah Stok PPE";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2"><label asp-for="MasterItemID">Item ID</label><input asp-for="MasterItemID" class="form-control" id="itemIdInput" /></div>
            <div class="form-group mb-2"><label>Nama Item</label><input id="namaItem" class="form-control" readonly /></div>
            <div class="form-group mb-2"><label>Deskripsi</label><textarea id="deskripsiItem" class="form-control" readonly></textarea></div>
            <div class="form-group mb-2"><label asp-for="Jumlah"></label><input asp-for="Jumlah" class="form-control" /></div>
            <div class="form-group"><input type="submit" value="Simpan" class="btn btn-primary" /></div>
        </form>
    </div>
</div>
@section Scripts {
    <script>
    $(document).ready(function () {
        $("#itemIdInput").on('blur', function () {
            var itemId = $(this).val();
            if (itemId) {
                $.ajax({
                    url: '@Url.Action("GetItemDetails", "Stock")',
                    type: 'GET', data: { id: itemId },
                    success: function (data) {
                        $("#namaItem").val(data.namaItem);
                        $("#deskripsiItem").val(data.deskripsiItem);
                    },
                    error: function () {
                        alert("Item ID tidak ditemukan!");
                        $("#namaItem").val(''); $("#deskripsiItem").val('');
                    }
                });
            }
        });
    });
    </script>
}