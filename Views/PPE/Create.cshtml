@model FIFO_Infineon.Models.StockItem
@{
    ViewData["Title"] = "Add Disposal Stock";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-2">
                <label asp-for="MasterItemID">Item ID</label>
                <select asp-for="MasterItemID" class="form-control" asp-items="ViewBag.MasterItemID">
                    <option value="">-- Choose Item ID --</option>
                </select>
            </div>
            
            <div class="form-group mb-2">
                <label>Item Name</label>
                <input id="itemName" class="form-control" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
            </div>
            
            <div class="form-group mb-2">
                <label>Item Description</label>
                <textarea id="itemDescription" class="form-control" readonly style="background-color: #e9ecef; cursor: not-allowed;"></textarea>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="Quantity">Quantity</label>
                <input asp-for="Quantity" class="form-control" placeholder="0" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-custom-primary me-2" />
                <a asp-action="DisposalStockItem" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
    $(document).ready(function () {
        $("#MasterItemID").on('change', function () {
            var itemId = $(this).val();
            if (itemId) {
                $.ajax({
                    url: '@Url.Action("GetItemDetails", "Disposal")',
                    type: 'GET',
                    data: { id: itemId },
                    success: function (data) {
                        $("#itemName").val(data.itemName);
                        $("#itemDescription").val(data.itemDescription);
                    },
                    error: function () {
                        $("#itemName").val('Item Not Found'); 
                        $("#itemDescription").val('Please choose again');
                    }
                });
            } else {
                $("#itemName").val('');
                $("#itemDescription").val('');
            }
        });
    });
    </script>
}