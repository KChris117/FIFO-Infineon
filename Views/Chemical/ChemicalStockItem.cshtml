@model IEnumerable<FIFO_Infineon.Models.StockItem>
@{
    ViewData["Title"] = "Stok Barang - Chemical";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div>
        <a asp-action="Create" class="btn btn-primary me-2">
            <i class="fas fa-plus-circle"></i> Tambah Barang
        </a>
        <a asp-action="Keluar" class="btn btn-danger">
            <i class="fas fa-minus-circle"></i> Keluarkan Barang
        </a>
    </div>
</div>

<p class="text-muted">
    Berikut adalah daftar stok barang kategori Chemical. Stok diurutkan berdasarkan tanggal masuk.
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Item ID</th>
            <th>Nama Barang</th>
            <th>Deskripsi</th>
            <th>Jumlah</th>
            <th>Tanggal Masuk</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.MasterItemID
                </td>
                <td>
                    @if (item.MasterItem != null)
                    {
                        @item.MasterItem.NamaItem
                    }
                </td>
                <td>
                    @if (item.MasterItem != null)
                    {
                        @item.MasterItem.DeskripsiItem
                    }
                </td>
                <td>
                    @item.Jumlah
                </td>
                <td>
                    @item.TanggalMasuk.ToString("g")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>