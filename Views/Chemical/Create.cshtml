@model FIFO_Infineon.Models.StockItem
@{
    ViewData["Title"] = "Tambah Stok Chemical";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="MasterItemID">Item ID</label>
                <input asp-for="MasterItemID" class="form-control" id="itemIdInput" />
            </div>
            <div class="form-group mb-2">
                <label>Nama Item</label>
                <input id="namaItem" class="form-control" readonly />
            </div>
            <div class="form-group mb-2">
                <label>Deskripsi</label>
                <textarea id="deskripsiItem" class="form-control" readonly></textarea>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Jumlah"></label>
                <input asp-for="Jumlah" class="form-control" />
                <span asp-validation-for="Jumlah" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Simpan" class="btn btn-primary" />
                <a asp-action="ChemicalStockItem" class="btn btn-secondary">Batal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $("#itemIdInput").on('blur', function () {
                var itemId = $(this).val();
                if (itemId) {
                    $.ajax({
                        url: '@Url.Action("GetItemDetails", "Stock")',
                        type: 'GET',
                        data: { id: itemId },
                        success: function (data) {
                            $("#namaItem").val(data.namaItem);
                            $("#deskripsiItem").val(data.deskripsiItem);
                        },
                        error: function () {
                            alert("Item ID tidak ditemukan!");
                            $("#namaItem").val('');
                            $("#deskripsiItem").val('');
                        }
                    });
                }
            });
        });
    </script>
}