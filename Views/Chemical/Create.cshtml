@model FIFO_Infineon.Models.StockItem
@{
    ViewData["Title"] = "Tambah Stok Chemical";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-2">
                <label asp-for="MasterItemID">Item ID</label>
                <select asp-for="MasterItemID" class="form-control" asp-items="ViewBag.MasterItemID">
                    <option value="">-- Choose Item --</option>
                </select>
            </div>
            
            <div class="form-group mb-2">
                <label>Nama Item</label>
                <input id="namaItem" class="form-control" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
            </div>
            
            <div class="form-group mb-2">
                <label>Deskripsi</label>
                <textarea id="deskripsiItem" class="form-control" readonly style="background-color: #e9ecef; cursor: not-allowed;"></textarea>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="Jumlah"></label>
                <input asp-for="Jumlah" class="form-control" placeholder="0" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn btn-custom-primary" />
                <a asp-action="ChemicalStockItem" class="btn btn-outline-secondary">Batal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
    $(document).ready(function () {
        $("#MasterItemID").on('change', function () {
            var itemId = $(this).val();
            if (itemId) {
                $.ajax({
                    url: '@Url.Action("GetItemDetails", "Stock")',
                    type: 'GET', data: { id: itemId },
                    success: function (data) {
                        $("#namaItem").val(data.namaItem);
                        $("#deskripsiItem").val(data.deskripsiItem);
                    },
                    error: function () {
                        $("#namaItem").val('Item tidak ditemukan'); 
                        $("#deskripsiItem").val('Silakan pilih ulang');
                    }
                });
            } else {
                $("#namaItem").val('');
                $("#deskripsiItem").val('');
            }
        });
    });
    </script>
}