@model FIFO_Infineon.Models.StockItem
@{
    ViewData["Title"] = "Edit Stok";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-2">
                <label asp-for="MasterItemID" class="control-label"></label>
                <input asp-for="MasterItemID" class="form-control" readonly />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Jumlah" class="control-label"></label>
                <input asp-for="Jumlah" class="form-control" />
                <span asp-validation-for="Jumlah" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="TanggalMasuk" class="control-label"></label>
                <input asp-for="TanggalMasuk" class="form-control" readonly />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Simpan" class="btn btn-primary" />
                <a asp-action="ChemicalStockItem" class="btn btn-secondary">Batal</a>
            </div>
        </form>
    </div>
</div>