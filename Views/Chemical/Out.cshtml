@model FIFO_Infineon.Models.StockItem
@{
    ViewData["Title"] = "Withdraw Chemical Stock";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Out" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-2">
                <label asp-for="MasterItemID">Item Name</label>
                <select asp-for="MasterItemID" class="form-control" asp-items="ViewBag.MasterItemID">
                    <option value="">-- Choose Item --</option>
                </select>
                <span asp-validation-for="MasterItemID" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="Quantity">Quantity to Withdraw</label>
                <input asp-for="Quantity" class="form-control" placeholder="0" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Withdraw" class="btn btn-danger me-2" />
                <a asp-action="ChemicalStockItem" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}